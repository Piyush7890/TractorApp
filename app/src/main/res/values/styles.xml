<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.IOSched.CollapsibleCard" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/collapsing_section</item>
    </style>

    <style name="CollapsibleCardHeader">
        <item name="android:id">@id/header</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>
