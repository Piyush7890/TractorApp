<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="start"
    android:layout_marginEnd="64dp"
    android:layout_marginStart="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">
    <com.wce.tractorapp.widget.CircleImageView
        android:scaleType="centerCrop"
        android:src="@drawable/fake"
        android:id="@+id/avatar"
        android:layout_width="32dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="start"
        android:layout_height="32dp" />
    <com.wce.tractorapp.widget.MessageTipView
        app:type="left"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        style="@style/MessageTextAppearance"
        android:text="owfhowfhf fowhfwofuw foufh fhfof hfouwf hfhwf fwhf wiufuhw ifhw ifh fwfihiw"
        android:layout_gravity="start"
        android:background="@drawable/chat_bg_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="start"
        android:paddingTop="4dp"
        android:textColor="?android:textColorSecondary"
        android:text="3:32 PM"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>